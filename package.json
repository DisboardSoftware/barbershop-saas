{
  "name": "barbershop-saas-blueprint",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "docker compose up --build",
    "down": "docker compose down -v",
    "lint": "npm run lint -w frontend && npm run lint -w backend",
    "test": "npm run test -w frontend",
    "build": "npm run build -w frontend",
    "smoke": "node scripts/mvp-smoke.js",
    "prisma:generate": "npm run prisma:generate -w backend",
    "prisma:validate": "npm run prisma:validate -w backend",
    "prisma:migrate": "npm run prisma:migrate -w backend",
    "db:backup": "bash scripts/backup-postgres.sh",
    "db:restore": "bash scripts/restore-postgres.sh",
    "prepare": "husky",
    "commitlint": "commitlint --edit",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@playwright/test": "^1.54.2",
    "ajv": "^8.17.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2"
  },
  "overrides": {
    "ajv-keywords@^5.1.0": {
      "ajv": "^8.17.1"
    }
  }
}
